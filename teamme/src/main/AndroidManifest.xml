<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.pasligh.android.teamme"
    android:versionCode="22"
    android:versionName="1.4" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="android.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.pasligh.android.teamme.GameCreatorActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.pasligh.android.teamme.GameStatisticsActivity"
            android:parentActivityName=".GameCreatorActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GameCreatorActivity" />
        </activity>
        <activity
            android:name="de.pasligh.android.teamme.TeamChooser"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/addPlayer"
            android:parentActivityName=".GameCreatorActivity" >
        </activity>
        <activity
            android:name="de.pasligh.android.teamme.TeamOverview"
            android:label="@string/overview"
            android:parentActivityName=".GameCreatorActivity" >
        </activity>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>