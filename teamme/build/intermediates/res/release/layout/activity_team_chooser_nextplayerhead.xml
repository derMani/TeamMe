<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/TeamChooserFormularNextPlayerHeadLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/GameProgressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/inactive" />

    <RelativeLayout
        android:id="@+id/ProgressCircleBarLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <de.pasligh.android.teamme.tools.HoloCircleSeekBar
            android:id="@+id/GameProgessCircleBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:max="24"
            app:pointer_color="#AA66CC"
            app:pointer_halo_color="#AA66CC"
            app:pointer_size="16"
            app:show_text="false"
            app:wheel_active_color="@color/active"
            app:wheel_size="32"
            app:wheel_unactive_color="#AA66CC" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/NextPlayerButton"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector"
        android:contentDescription="@string/playernext"
        android:src="@drawable/next_white" />

</RelativeLayout><!-- From: file:/C:/Users/Thomas/StudioProjects/TeamMe/app/src/main/res/layout/activity_team_chooser_nextplayerhead.xml -->